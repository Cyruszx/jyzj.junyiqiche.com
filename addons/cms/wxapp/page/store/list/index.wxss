/* page/store/list/index.wxss */

.store_layout {
    width: 100%;
    height: 150rpx;
}

.classify {
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
    padding-top: 238rpx;
    display: flex;
    overflow: hidden;
    box-sizing: border-box;
} 

.nav_left {
    width: 25%;
    background: #f8f8f8;
}

.nav_right {
    width: 75%;
    background: #fff;
    padding: 10px;
}

.nav_right .title {
    font-size: 12px;
    font-weight: bold;
    color: #666;
    padding-bottom: 10px;
}

.nav_left_item {
    color: #7c7c7c;
    font-size: 26rpx;
    width: 100%;
    padding: 20rpx 0;
    text-align: center;
}

.nav_left_item.active {
    background: #fff;
    position: relative;
}


