.notfound {
    height: 300rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f8f8f8;
}

.no-store {
    width: 340rpx;
    height: 80rpx;
}

.store {
    position: relative;
    height: 300rpx;
}

.store-image {
    display: block;
    width: 100%;
    height: 100%;
}

.store-content {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    font-size: 20rpx;
    color: #fff;
    background-color: rgba(0, 0, 0, .75);
    padding: 30rpx 20rpx;
}

.store-title {
    font-size: 30rpx;
}

.store-address {
    max-width: 340rpx;
}

.store-qrcode {
    width: 104rpx;
    height: 104rpx;
}

.store-btn {
    display: inline-block;
    width: 200rpx;
    font-size: 22rpx;
    text-align: center;
    
    background-color: #ff9600;
    /* border-radius: 22rpx; */
    /* padding: 6rpx; */
    box-sizing: border-box;
    height: 60rpx;
    line-height: 60rpx;
}

.store-count {
    display: inline-block;
    margin-left: 30rpx;
}