
.wheel_wp{
  width: 100%;
  height: 782rpx;
  position: absolute;
  left: 0;
  top: 394rpx;
  margin: 0 auto;
  z-index: 2;
}
.wheel_wp image{
  display: block;
  width: 100%;
  height: 100%;
}
.wheel_wp .wheel_pointer{
  position: absolute;
  width: 150rpx;
  height: 150rpx;
  top: 50%;
  left: 50%;
  margin: -75rpx 0 0 -75rpx;
  transform-origin: 50% 50%;
  overflow: visible;
}
.wheel_wp .wheel_pointer image{
  position: absolute;
  width: 150rpx;
  height: 238rpx;
  left: 4rpx;
  top: -64rpx;
}